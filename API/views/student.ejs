<!-- attendance.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Attendance</title>
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }
    th {
      background-color: #f2f2f2;
    }
    .present {
      color: green;
    }
    .absent {
      color: red;
    }
  </style>
</head>
<body>
  <h1>Students</h1>
  <table>
    <tr>
      <th>Student ID</th>
      <th>Name</th>
      <th>Department</th>
    </tr>
    <% for (const record of data) { %>
        <tr>
          <td><%= record.id %></td>
          <td><%= record.name %></td>
          <td><%= record.department %></td>
        </tr>
    <% } %>
  </table>
</body>
</html>
