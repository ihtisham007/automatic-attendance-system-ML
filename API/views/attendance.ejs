<!-- attendance.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Attendance</title>
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }
    th {
      background-color: #f2f2f2;
    }
    .present {
      color: green;
    }
    .absent {
      color: red;
    }
  </style>
</head>
<body>
  <h1>Student Attendance</h1>
  <table>
    <tr>
      <th>Student ID</th>
      <th>Name</th>
      <th>Department</th>
      <th>Attendance Status</th>
      <th>Attendance Date</th>
    </tr>
    <% for (const record of data) { %>
      <% for (const attendance of record.attendance) { %>
        <tr>
          <td><%= record.student.id %></td>
          <td><%= record.student.name %></td>
          <td><%= record.student.department %></td>
           <td class="<%= attendance.status === 1 ? 'present' : 'absent' %>">
            <%= attendance.status === 1 ? 'Present' : 'Absent' %>
          </td>
          <td><%= attendance.dateTime %></td>
        </tr>
      <% } %>
    <% } %>
  </table>
</body>
</html>
